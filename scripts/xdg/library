#!/bin/bash

# Check if environment variable is set
if [ -z "$KKSUBS_LIBRARY" ]; then
    echo "Error: KKSUBS_LIBRARY environment variable is not set"
    exit 1
fi

# Build the target directory path
TARGET_DIR="$KKSUBS_LIBRARY"

# Check if directory exists
if [ ! -d "$TARGET_DIR" ]; then
    echo "Error: Directory does not exist: $TARGET_DIR"
    exit 1
fi

# Open the directory
xdg-open "$TARGET_DIR" 